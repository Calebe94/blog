---
import BlogPost from "@/layouts/BlogPost.astro";
import { getEntry } from "astro:content";
import { render } from "astro:content";

// Fetch the `uses.md` file from the content collection
const usesEntry = await getEntry("uses", "uses");
console.log("usesEntry:", usesEntry); // Add this line to debug

if (!usesEntry) {
  throw new Error("Uses entry not found!");
}

const { Content } = await render(usesEntry);
---


<BlogPost post={usesEntry}>
	<Content />
</BlogPost>
